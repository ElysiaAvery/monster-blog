{{#if showForm}}
  <form class="panel">
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Comment:</label>
      {{textarea value=content id="content" placeholder="Comment goes here"}}
    </div>
    <button {{action 'sendNewComment' post}}>Submit</button>
    <button {{action 'deactivateDisplay'}}>Cancel</button>
  </form>
{{else}}
    <button {{action 'activateDisplay'}}>New Comment</button>
{{/if}}
