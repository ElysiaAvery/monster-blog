{{#if showEditForm}}
  <div>
    <h2>Edit This Post: </h2>
    <form>
      <div class='form-group'>
        <label for="author">Enter Author Name: </label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class='form-group'>
        <label for="author">Enter Title: </label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <!-- <div class='form-group'>
        <label for="author">Enter Date: </label>
        {{input value=date id="date"}}
      </div> -->

      <div class='form-group'>
        <label for="author">Enter Subject Tag: </label>
        {{input value=tags id="tags" placeholder=post.tags}}
      </div>

      <div class='form-group'>
        <label for="author">Enter Content: </label>
        {{tinymce-editor options=options value=content placeholder=post.content}}
        <!-- {{textarea value=content id="content" placeholder=post.content}} -->
      </div>

      <div class='form-group'>
        <label for="author">Enter Image URL: </label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <button {{action 'updatePost' post}}>Update Post</button>
    </form>
  </div>
{{else}}
  <button {{action 'showEditPostForm'}}>Edit Post</button>
{{/if}}
