<div class="panel">
  <h2>Add A Post: </h2>
  <form>
    <div class='form-group'>
      <label for="author">Enter Author Name: </label>
      {{input value=author id="author"}}
    </div>

    <div class='form-group'>
      <label for="title">Enter Title: </label>
      {{input value=title id="title"}}
    </div>

    <!-- <div class='form-group'>
      <label for="author">Enter Date: </label>
      {{input value=date id="date"}}
    </div> -->

    <div class='form-group'>
      <label for="tags">Enter Subject Tag: </label>
      {{input value=tags id="tags"}}
    </div>

    <div class='form-group'>
      <label for="content">Enter Content: </label>
      {{textarea options=options value=content}}
    </div>

    <div class='form-group'>
      <label for="image">Enter Image URL: </label>
      {{input value=image id="image"}}
    </div>
    <button {{action 'makeNewPost'}}>Add Post</button>
  </form>
</div>
