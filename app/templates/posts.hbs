<div class="row panel">
  <div class="col-sm-4">
    <img src={{model.image}}>
  </div>
  <div class="col-sm-8">
    <h4><strong>{{model.title}}</strong></h4>
    <h6><em>{{model.author}}</em></h6>
    <p>{{model.content}}</p>
  </div>
  <button {{action 'destroyPost' model}}>Delete Post</button>
  {{edit-post updatePost='updatePost' post=model}}
</div>
<div class="panel">
  <h4>Comments</h4>
  {{#if model.comments}}
    {{#each model.comments as |comment|}}
      {{comment-display comment=comment destroyComment='destroyComment' updateComment='updateComment'}}
    {{/each}}
  {{else}}
    <h5>No Comments..</h5>
  {{/if}}
  {{new-comment sendNewComment='catchNewComment' post=model}}
</div>
